/* page_hd,page_bd,page_bd_spacing */

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.button-management {
  float: right;
  margin: 0 5px;
  border-radius: 2px;
  padding: 5rpx 10rpx;
  border: 1px solid #1fbf23;
  color: #1fbf23;
  text-align: center;
  width: 30px;
  font-size: 12px;
  line-height: 12px;
}

button{
  background-color:#ff8800!important;
  color: white!important;
  border:none!important;
}