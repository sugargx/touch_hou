Page{
    background-color: white;
    padding-top: 30rpx;
    font-family: "微软雅黑"； 
}
.item-wrapper {
  width: 100%;
}

.item-list {
  position: relative;
  width: 100%;
  height:100px;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.item-info, .item-oper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}

.item-info {
  display: flex;
  padding: 20rpx 20rpx 20rpx 0;
  z-index: 2;
  background: white;
  transition: left 0.2s ease-in-out;
}

.item-list:first-child {
  border-top: 1px solid #ccc;
}

.item-oper {
  display: flex;
  justify-content: flex-end;
}

.oper-delete {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: red;
}

.info-img {
  display: block;
  float: left;
  width: 55rpx;
  height: 55rpx;
  display: block;
  border-radius: 100rpx;
}

.video-img {
  width: 170rpx;
  height: 170rpx;
  float: right;
  margin-right: 30rpx;
  margin: 10rpx 10rpx 10rpx 10rpx;
  border-radius: 10rpx;
}

.info-wrapper {
  margin-left: 20rpx;
  width: 588rpx;
}

.info-desc {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 6rpx;
}

.info-desc .name {
  font-size: 15px;
  color: black;
}

.info-desc .time {
  font-size: 24rpx;
  color: #999;
}

.info-content {
  /* font-size: 28rpx;
    color: #999;
    margin-top: 4rpx; */
  font-size: 30rpx;
  color: #909090;
  float: left;
  padding-top: 50rpx;
}
