page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 20px;
  /* text-align: center; */
}

.weui-navbar__slider {
  width: 8em;
}

.weui-navbar {
  background-color: #fff;
}

.weui-tab__panel {
  background-color: #f2f2f2;
}

image {
  width: 64px;
  height: 64px;
}

.msg {
  height: 100px;
  display: flex;
  flex-direction: column;
  width: 85%;
  background-color: #fff;
  border-radius: 15px;
  margin: 0 auto;
  padding: 10px 15px 15px 15px
}

.msghead {
  height: 35px;
  display: flex;
  line-height: 35px;
}

.msghead_tit {
  flex-grow: 2;
  text-align: left;
}

.msghead_date {
  font-size: 25rpx;
  color: #aaa;
}

.msgmain {
  display: flex;
  height: 64px;
}

.msgmain_cont {
  padding: 5px;
  width: 80%;
  background-color: #F7F7F7;
  text-align: left;
  border-radius: 5px;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;

}
