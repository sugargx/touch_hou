/* pages/myorder/myorder.wxss */

.weui-navbar__slider {
  width: 125rpx;
}

.orderDetails {
  background: #fff;
  /* border-bottom: 10rpx solid #f3f3f3; */
  margin-bottom: 20rpx;
}

.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.orderListTitle .userImg {
  float: left;
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  margin: 15rpx;
}

.orderListTitle .userImg image {
  border-radius: 35rpx;
  width: 100%;
  height: 100%;
}

.orderListTitle .userName {
  padding-right: 50rpx;
  /* background: url(../../../images/member_list_arrow.png) no-repeat 90% center; */
  background-size: 35rpx 35rpx;
}

/*订单状态*/

.orderListTitle .finished {
  float: right;
  margin-right: 20rpx;
  color: #09bb07;
  font-size: 34rpx;
}

.orderListDetails {
  display: flex;
  height: auto;
}

.orderListDetails .productImg {
  width: 85px;
  height: 85px;
  margin: 15px 5px 5px 5px;
  border-radius: 5px;
  margin-left: 20rpx;
}

.orderListDetails .productImg image {
  width: 85px;
  height: 85px;
  border-radius: 5px;
}

.orderListDetails .productInfo {
  flex: 4;
  padding: 20rpx 30rpx;
  width: 65%;
  float: right;
  height: auto;
}

.orderListDetails .productInfo .productTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 32rpx;
  height: 50rpx;
}

.orderListDetails .productInfo .productPrice {
  font-size: 28rpx;
  height: 20rpx;
}

.orderListDetails .productInfo .productQuantity {
  float: right;
  font-size: 28rpx;
  margin-top: 15rpx;
  height: 20rpx;
}

.productCount {
  height: 80rpx;
  line-height: 80rpx;
  /* border-bottom: 1rpx solid #f3f3f3; */
  border-bottom: 1rpx solid #f3f3f3;
  width: 750rpx;
  margin-left: -213rpx;
}

.productCount>view {
  float: right;
  /* margin-right: 30rpx; */
  font-size: 30rpx;
  /* margin-right:-90rpx; *//* margin-left:536rpx; */
}

/*完成样式*/

.aboutorder {
  height: 60rpx;
  line-height: 60rpx;
  color: #2f2f2f;
  padding: 15rpx 30rpx 15rpx 0;
  margin-top: -15rpx;
}

.aboutorder>navigator {
  font-size: 25rpx;
  float: left;
}

/*待付款样式*/

.orderListTitle .notpay {
  float: right;
  margin-right: 20rpx;
  color: #09bb07;
  font-size: 34rpx;
}

.topay {
  /* float: right; */
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  background: #09bb07;
  color: #fff;
  float: right;
}

/*待派送*/

.orderListTitle .notsent {
  float: right;
  margin-right: 20rpx;
  color: #ffbf00;
  font-size: 34rpx;
}

.toremind {
  /* float: right; */
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  background: #09bb07;
  color: #fff;
  position: relative;
  left: 75%;
}

/*待收货*/

.orderListTitle .notreceive {
  float: right;
  margin-right: 20rpx;
  color: #ffbf00;
  font-size: 34rpx;
}

.toreceive {
  /* float: right; *//* width: 180rpx; */
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
