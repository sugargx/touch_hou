  color: #fff;
  position: relative;
  left: 75%;
}

/*待评价*/

.orderListTitle .notcom {
  float: right;
  margin-right: 20rpx;
  color: #ffbf00;
  font-size: 34rpx;
}

.tocom {
  /* float: right; */
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  background: #09bb07;
  color: #fff;
  position: relative;
  left: 75%;
}

.order_msg {
  font-size: 24rpx;
  height: auto;
  min-height: 50rpx;
}

.time {
  height: 40rpx;
  font-size: 24rpx;
}

.head_image {
  width: 70rpx;
  height: 70rpx;
  display: inline-block;
  margin: 5rpx;
}

.head_image image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.addBless image {
  width: 70rpx;
  height: 70rpx;
}

.addBless {
  position: fixed;
  bottom: 50rpx;
  right: 20rpx;
}
