/* pages/my/my.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 170rpx;
  height: 170rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nick_name{
  text-align: center;
  color: #fff;
  font-size: 36rpx;
}
.userinfo-account {
  color:#fff;
  margin-top: 20rpx;
  margin-bottom: 64rpx;
  font-size: 28rpx;
}
.userinfo-score{
  margin-top: 26rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}
.usercontainer{
  /* border-bottom: 3px solid #ccc; */
  height: 300rpx;
  display: flex;   
  justify-content: space-around; 
  align-items: center;
  background-color: #ff8800
}
.more{
  font-size: 30rpx;
}
.login::after{
  border: none;
}
.login{
  background-color: #ffffff;
}




.order {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
}
.myorder-text {
  font-size: 30rpx;
  color: gray;
  margin: 20rpx;
  width: 40%;
}
.myorderlook-text {
  font-size: 30rpx;
  color: gray;
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}
.next-image {
  width: 20rpx;
  height: 25rpx;
  position: relative;
  right: 10rpx;
}
.navs {
  display: flex;
}
.nav-item {
  width: 30%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.nav-item .nav-image {
  width: 50rpx;
  height: 50rpx;
  margin: 5rpx;
}
.nav-item text {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}

navigator image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.menu-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

